<!-- pages/huodongshangpin/index.wxml  活动商品 -->
<view class="user-info-box">
  <van-cell-group class="top-file" style="padding-left:32rpx;">
    <text style="display:inline-block;margin-left:32rpx;margin-right:30rpx;color:#646566;font-size: 26rpx;">会员卡图片</text>
    <van-uploader  max-size="2000000" bind:oversize="asssad" file-list="{{ fileList }}" bind:after-read="afterRead"/>
  </van-cell-group>
  <van-cell-group>
    <van-field
      model:value="{{ name }}"
      placeholder="请输入名称"
      border="{{ false }}"
      label="名称"
    />
  </van-cell-group>
  <!-- <van-cell-group>
    <van-cell title="是否上架" border="{{ false }}">
      <van-switch size="24px"  slot="right-icon" checked="{{ shangjia }}" bind:change="onChangeShangjia" />
    </van-cell>
  </van-cell-group> -->
  <van-cell-group class="custom-style" style="display: flex;align-items: center;">
    <text style="display:inline-block;margin-right:30rpx;color:#646566;font-size: 26rpx;">卡类型</text>
    <view style="height: 50rpx;text-align: center;display: inline-flex;justify-content: center;padding: 20rpx 30rpx;">
      <van-radio-group value="{{ type }}" bind:change="onChangeRadioTab">
        <van-radio name="30" checked-color="#BA9245" style="float:left;margin-right:40rpx">月卡</van-radio>
        <van-radio name="90" checked-color="#BA9245" style="float:left;margin-right:40rpx">季卡</van-radio>
        <van-radio name="360" checked-color="#BA9245" style="float:left;">年卡</van-radio>
      </van-radio-group>
    </view>
  </van-cell-group>
  <van-cell-group>
    <van-field
      model:value="{{ desc }}"
      label="会员卡详情"
      type="textarea"
      placeholder="请输入会员卡详情"
      autosize
      border="{{ false }}"
    />
  </van-cell-group>
  <van-cell-group>
    <van-field
      model:value="{{ discount }}"
      label="此卡折扣"
      type="textarea"
      placeholder="填写1-10，如8.8代表88折扣"
      autosize
      border="{{ false }}"
    />
  </van-cell-group>
  <van-cell-group>
    <van-field
      model:value="{{ money }}"
      label="此卡金额"
      type="textarea"
      placeholder="请输入此卡金额"
      autosize
      border="{{ false }}"
    />
  </van-cell-group>
  <view class="queren-but">
    <van-button plain hairline type="info" bindtap="oooo">确认信息</van-button>
  </view>
  <van-toast id="van-toast" />
</view>