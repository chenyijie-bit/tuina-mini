<view>
  <view style="text-align: right;padding: 30rpx 41rpx 28rpx;" bindtap="addStore">
    <text>添加活动商品</text><van-icon  style="vertical-align: middle;margin-left: 10rpx;" name="add-o" color="333" size="25px"/>
  </view>
  <view style="padding:30rpx;">
    <view wx:for="{{list}}" wx:key="index" style="padding:30rpx;background: #efefef;border-radius: 12rpx;margin-bottom:30rpx;">
      <view class="padding-item">商品图片：<image style="display:inline-block;height:80rpx;width:50rpx;vertical-align: middle;" mode="aspectFit" src="{{item.atta_url}}"></image></view>
      <view class="padding-item">名称：{{item.name}}</view>
      <view class="padding-item">描述：{{item.desc}}</view>
      <view class="padding-item">创建时间：{{item.create_time}}</view>
      <view class="padding-item">更新时间：{{item.update_time}}</view>
      <view class="padding-item">价格：{{item.price}}</view>
      
      <view wx:if="{{item.status == 1}}" style="text-align:right;">
        <van-button  class="but-but-del" size="small" plain type="info" data-price="{{item.price}}" data-attaid="{{item.atta_id}}" data-desc="{{item.desc}}" data-name="{{item.name}}" data-id="{{item.id}}" bindtap="shanchu">删除</van-button>
        <van-button  class="but-but" size="small" plain type="info" data-price="{{item.price}}" data-attaid="{{item.atta_id}}" data-desc="{{item.desc}}" data-name="{{item.name}}" data-id="{{item.id}}" bindtap="guanbi">已启用</van-button>
      </view>
      <view wx:else style="text-align:right;">
        <van-button  class="but-but-del" size="small" plain type="info" data-price="{{item.price}}" data-attaid="{{item.atta_id}}" data-desc="{{item.desc}}" data-name="{{item.name}}" data-id="{{item.id}}" bindtap="shanchu">删除</van-button>
        <van-button class="but-but-gray" size="small" plain type="info" data-price="{{item.price}}" data-attaid="{{item.atta_id}}" data-desc="{{item.desc}}" data-name="{{item.name}}" data-id="{{item.id}}" bindtap="kaiqi">已禁用</van-button>
      </view>
    </view>
  </view>
</view>