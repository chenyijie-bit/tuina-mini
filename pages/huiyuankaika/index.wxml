<view>
  <view style="text-align: right;padding: 30rpx 41rpx 28rpx;" bindtap="tianjiahuiyuanka">
    <text>添加会员卡</text><van-icon  style="vertical-align: middle;margin-left: 10rpx;" name="add-o" color="333" size="25px"/>
  </view>
  <view style="height: 50rpx;text-align: center;display: flex;justify-content: center;padding: 30rpx;">
    <van-radio-group value="{{ radio }}" bind:change="onChangeRadioTab">
      <van-radio name="1" checked-color="#BA9245" style="float:left;margin-right:40rpx">已启用</van-radio>
      <van-radio name="2" checked-color="#BA9245" style="float:left;">已关闭</van-radio>
    </van-radio-group>
  </view>
  <view style="padding:30rpx;">
    <view wx:for="{{list}}" wx:key="index" style="padding:30rpx;background: #efefef;border-radius: 12rpx;margin-bottom:30rpx;">
      <view>会员卡图片：<image style="display:inline-block;height:80rpx;width:50rpx;vertical-align: middle;" mode="aspectFit" src="{{item.atta_id}}"></image></view>
      <view class="padding-item">名称：{{item.name}}</view>
      <view class="padding-item">描述：{{item.desc}}</view>
      <view class="padding-item">价格：{{item.price}}</view>
      <view class="padding-item">折扣：{{item.discount * 10}}折</view>
      <view wx:if="{{item.status == 200}}" style="text-align:right;">
        <van-button  class="but-but" size="small" plain type="info" data-id="{{item.id}}"  bindtap="guanbi">已启用</van-button>
      </view>
      <view wx:else style="text-align:right;">
        <van-button  class="but-but-del but-but-red" size="small" plain type="info" data-id="{{item.id}}" bindtap="shanchu">删除</van-button>
        <van-button class="but-but-red" size="small" plain type="info"  data-id="{{item.id}}"  bindtap="kaiqi">已禁用</van-button>
      </view>
    </view>
  </view>
  <van-dialog id="van-dialog" />
</view>