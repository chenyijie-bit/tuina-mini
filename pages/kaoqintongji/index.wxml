<!--pages/kaoqintongji/index.wxml-->
<view>
  <view>
    <van-datetime-picker
      type="year-month"
      value="{{ currentDate }}"
      min-date="{{ minDate }}"
      bind:input="onInput"
    />
  </view>
  <view class="flex-box">
    <view wx:for="{{dateList}}" wx:key="index" class="item">
      <view>{{item.name}}</view>
      <view class="circle"></view>
    </view>
  </view>
</view>
