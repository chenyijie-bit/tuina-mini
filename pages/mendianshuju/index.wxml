<!--pages/mendianshuju/index.wxml-->
<view class="">
  <view style="text-align: right;padding: 30rpx 41rpx 28rpx;" bindtap="addStore">
    <text>添加店铺</text><van-icon bindtap="tianjiatongzhi" style="vertical-align: middle;margin-left: 10rpx;" name="add-o" color="333" size="25px"/>
  </view>
  <view wx:for="{{storeList}}" data-name="{{item.name}}" data-id="{{item.id}}" class="parent-box" bindtap="dianpuxiangqing" wx:key="index">
    <view class="item-box">
      <view style="font-size: 40rpx;padding-bottom: 20rpx;">{{item.name}}</view>
      <view>订单总数：{{item.info.sum_count}}</view>
      <view>非首次订单数：{{item.info.rep_count}}</view>
      <view>实际支付金额：{{item.info.sum_pay_price}}</view>
      <view>优惠金额：{{item.info.sum_promotion_price}}</view>
      <view>预收款总金额：{{item.info.sum_total_price}}</view>
    </view>
  </view>
</view>