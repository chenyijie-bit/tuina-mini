<view class="user-info-box">
  <van-cell-group class="top-file">
    <text style="display:inline-block;margin-right:30rpx;color:#646566;font-size: 26rpx;">上传图片</text>
    <van-uploader max-size="2000000" bind:oversize="asssad" file-list="{{ fileList }}" bind:after-read="afterRead"/>
  </van-cell-group>
  <van-cell-group>
    <van-field
      model:value="{{ name }}"
      placeholder="请输入姓名"
      border="{{ false }}"
      label="姓名"
    />
  </van-cell-group>
