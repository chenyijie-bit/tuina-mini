  <van-cell-group>
    <van-cell title="工作年限（年）" border="{{ false }}">
      <van-stepper slot="right-icon" label="工作年限" value="{{ nianxian }}" bind:change="onChangeAge" />
    </van-cell>
    
  </van-cell-group>
  <van-cell-group>
    <van-cell title="是否跨店" border="{{ false }}">
      <van-switch size="24px"  slot="right-icon" checked="{{ kuadian }}" bind:change="onChangeKuadian" />
    </van-cell>
  </van-cell-group>
  <van-cell-group>
    <van-field
      model:value="{{ message }}"
      label="擅长项目"
      type="textarea"
      placeholder="请输入擅长项目"
      autosize
      border="{{ false }}"
    />
  </van-cell-group>
  <view class="queren-but">
    <van-button plain hairline type="info" bindtap="oooo">确认信息</van-button>
  </view>
  <van-toast id="van-toast" />
