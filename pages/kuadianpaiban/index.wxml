<view>
  <view>
    <view class="item-box">
      <view class="date-box">
        <view wx:for="{{dateList}}"  wx:for-index="index" wx:key="index" class="date-item">
          {{item.name}}
        </view>
      </view>
      
      <view wx:for="{{mendianList}}" wx:key="index"  class="store-item">
        <view >
          {{item.name}}
        </view>
        <view class="flag-bbbb">
          <view wx:for="{{item.dateList}}" wx:for-index="j" wx:key="index" class="flag-box" data-parent="{{index}}" data-index="{{j}}" bindtap="setFlag">
            <van-icon wx:if="{{item.flag}}" name="success" class="success" color="green"/>
          </view>
        </view>
      </view>
    </view>
    <view style="text-align:center;margin-top: 120rpx;margin-bottom: 120rpx;">
      <van-button  class="but-but" size="small" plain type="info"   bindtap="queren">чбошод</van-button>
    </view>
  </view>
</view>