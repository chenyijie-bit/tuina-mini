<!-- pages/huodongshangpin/index.wxml  活动商品 -->
<view class="user-info-box">
  <van-cell-group class="top-file">
    <text style="display:inline-block;margin-right:30rpx;color:#646566;font-size: 26rpx;">海报图片</text>
    <van-uploader  file-list="{{ fileList }}" bind:after-read="afterRead"/>
  </van-cell-group>
  <van-cell-group>
    <van-field
      model:value="{{ name }}"
      placeholder="请输入标题"
      border="{{ false }}"
      label="标题"
    />
  </van-cell-group>
  <van-cell-group>
    <van-cell title="是否上架" border="{{ false }}">
      <van-switch size="24px"  slot="right-icon" checked="{{ shangjia }}" bind:change="onChangeShangjia" />
    </van-cell>
  </van-cell-group>
  <van-cell-group>
    <van-field
      model:value="{{ message }}"
      label="海报详情"
      type="textarea"
      placeholder="请输入海报详情"
      autosize
      border="{{ false }}"
    />
  </van-cell-group>
  <van-cell-group>
    <van-field
      model:value="{{ money }}"
      label="商品金额"
      type="textarea"
      placeholder="请输入商品金额"
      autosize
      border="{{ false }}"
    />
  </van-cell-group>
  <view class="queren-but">
    <van-button plain hairline type="info" bindtap="oooo">确认信息</van-button>
  </view>
  <van-toast id="van-toast" />
</view>