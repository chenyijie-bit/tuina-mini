<!--pages/me/index.wxml-->
<view class="me-box">
  <view class="me-box-top">
    <view class="user-logo">
      <image src="{{avatarUrl}}"></image>
    </view>
    <view class="user-info" bindtap="goToLogin">
      <text wx:if="{{nickName}}" class="name">{{nickName}}</text>
      <text wx:else class="name">{{nickNameCopy}}</text>
      <text wx:if="{{tel}}" class="tel" >{{tel}}</text>
    </view>
  </view>
  <view class="me-box-middle">
    <view class="middle-list">
      <view class="item" bindtap="goToOrder">
        <image src="../../assess/me/order.png"></image>
        <text>订单</text>
      </view>
      <view class="item">
        <image src="../../assess/me/like.png"></image>
        <text>我的收藏</text>
      </view>
      <view class="item">
        <image src="../../assess/me/add-friend.png"></image>
        <text>邀请好友</text>
      </view>
      <view class="item">
        <image src="../../assess/me/price.png"></image>
        <text>优惠券</text>
      </view>
      
    </view>
  </view>
</view>
