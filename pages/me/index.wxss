/* pages/me/index.wxss */
page{
  background: #f7f8f9;
}

.me-box-top{
  background: #fff;
  display: flex;
  padding: 30rpx;
  margin-bottom: 16rpx;
}
.user-info{
  display: flex;
  flex-direction: column;
}
.user-info .name{
  font-size: 34rpx;
  color: #282828;
  margin-top: 10rpx;
}
.user-info .tel{
  display: inline-block;
  margin-top: 32rpx;
  font-size: 25rpx;
  color: #535353;
}
.user-logo{
  margin-right: 30rpx;
}
.user-logo image{
  display: inline-block;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.middle-list{
  padding: 45rpx;
  display: flex;
  justify-content: space-around;
}
.middle-list .item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item image{
  display: inline-block;
  width: 64rpx;
  height: 64rpx;
}
.me-box-middle{
  background: #fff;
}
.item text{
  font-size: 25rpx;
  color: #3d3d3d;
  margin-top: 26rpx;
  display: inline-block;
  text-align: center;
}