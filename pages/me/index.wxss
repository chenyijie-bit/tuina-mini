/* pages/me/index.wxss */
page{
  background: rgba(247, 248, 249, 1);
}

.me-box-top{
  background: #fff;
  display: flex;
  padding: 30rpx;
  margin-bottom: 16rpx;
}
.user-info{
  display: flex;
  flex-direction: column;
}
.user-info .name{
  font-size: 34rpx;
  margin-top: 10rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #282828;
}
.user-info .tel{
  display: inline-block;
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #282828;
  opacity: .8;
}
.user-logo{
  margin-right: 30rpx;
}
.user-logo image{
  display: inline-block;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.middle-list{
  padding: 45rpx;
  display: flex;
  justify-content: flex-start;
}
.middle-list .item{
  width: 25%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item image{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
}
.me-box-middle{
  background: #fff;
}
.item text{
  font-size: 24rpx;
  color: #282828;
  opacity: .9;
  margin-top: 26rpx;
  display: inline-block;
  text-align: center;
}
button::after{
  border:none;
}